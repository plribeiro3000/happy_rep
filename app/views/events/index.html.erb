<%= form_tag(events_path, :method => "get") do %>
    <div class="container-fluid">
      <div class="row-fluid" >
        <div class="span3">
          Nome:
        </div>
        <div class="span3 row-form">
          <input type="text" id="name" name="name" />
        </div>
      </div>
      <div class="row-fluid" >
        <div class="span3">
          Data:
        </div>
        <div class="span3 row-form">
          <input type="text" id="date" name="date" placeholder="Exemplo: 01/01/1992 01:04" />
        </div>
      </div>
    </div>
    <%= button_tag("Consultar") %>

<% end %>


<table class="table table-striped">
  <tr>
    <th>Nome</th>
    <th>Capacidade</th>
    <th>Lucro</th>
    <th>Data</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.capacity %></td>
    <td><%= event.profit %></td>
    <td><%= event.event_date %></td>
    <td><%= link_to 'Visualizar', event %></td>
    <td><%= link_to 'Editar', edit_event_path(event) %></td>
    <td><%= link_to 'Apagar', event, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo evento', new_event_path %>