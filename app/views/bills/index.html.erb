<%= form_tag(bills_path, :method => "get") do %>
  <div class="container-fluid">
    <div class="row-fluid" >
      <div class="span3">
        Data de Vencimento
      </div>
      <div class="span3 row-form">
        <input type="text" id="expiration_date" name="expiration_date" placeholder="Exemplo: 01/01/1992" />
      </div>
    </div>
    <div class="row-fluid" >
      <div class="span3">
        Data de Pagamento
      </div>
      <div class="span3 row-form">
        <input type="text" id="payment_date" name="payment_date" placeholder="Exemplo: 01/01/1992" />
      </div>
    </div>
  </div>
  <%= button_tag("Consultar") %>

<% end %>


<table class="table table-striped">
  <thead>
  <tr>
    <th>Kind</th>
    <th>Value</th>
    <th>Expiration date</th>
    <th>Pay date</th>
    <th>Penalty</th>
    <th>Interest</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.kind %></td>
        <td><%= bill.value %></td>
        <td><%= bill.expiration_date %></td>
        <td><%= bill.payment_date %></td>
        <td><%= bill.penalty %></td>
        <td><%= bill.interest %></td>
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
        <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Bill', new_bill_path %>
