<%= form_tag(books_path, :method => "get") do %>
    <div class="container-fluid">
      <div class="row-fluid" >
        <div class="span3">
          Nome:
        </div>
        <div class="span3 row-form">
          <input type="text" id="name" name="name" />
        </div>
      </div>
      <div class="row-fluid" >
        <div class="span3">
          Autor:
        </div>
        <div class="span3 row-form">
          <input type="text" id="author" name="author" />
        </div>
      </div>
    </div>
    <%= button_tag("Consultar") %>

<% end %>


<table class="table table-striped">
  <tr>
    <th>Nome</th>
    <th>Autor</th>
    <th>Edição</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.name %></td>
    <td><%= book.author %></td>
    <td><%= book.edition %></td>
    <td><%= link_to 'Visualizar', book %></td>
    <td><%= link_to 'Editar', edit_book_path(book) %></td>
    <td><%= link_to 'Apagar', book, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo livro', new_book_path %>