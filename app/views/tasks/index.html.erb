<%= form_tag(tasks_path, :method => "get") do %>
    <div class="container-fluid">
      <div class="row-fluid" >
        <div class="span3">
          Nome:
        </div>
        <div class="span3 row-form">
          <input type="text" id="name" name="name" />
        </div>
      </div>
      <div class="row-fluid" >
        <div class="span3">
          Data:
        </div>
        <div class="span3 row-form">
          <input type="text" id="date" name="date" placeholder="Exemplo: 01/01/1992" />
        </div>
      </div>
    </div>
    <%= button_tag("Consultar") %>

<% end %>


<table class="table table-striped">
  <tr>
    <th>Nome</th>
    <th>Descrição</th>
    <th>Data de Início</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.description %></td>
    <td><%= l task.start_date if task.start_date %></td>
    <td><%= link_to 'Visualizar', task %></td>
    <td><%= link_to 'Editar', edit_task_path(task) %></td>
    <td><%= link_to 'Apagar', task, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nova tarefa', new_task_path %>