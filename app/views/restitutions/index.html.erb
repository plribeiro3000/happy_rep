<%= form_tag(restitutions_path, :method => "get") do %>
    <div class="container-fluid">
      <div class="row-fluid" >
        <div class="span3">
          Item:
        </div>
        <div class="span3 row-form">
          <input type="text" id="item" name="item" />
        </div>
      </div>
      <div class="row-fluid" >
        <div class="span3">
          Data:
        </div>
        <div class="span3 row-form">
          <input type="text" id="date" name="date" placeholder="Exemplo: 01/01/1992" />
        </div>
      </div>
    </div>
    <%= button_tag("Consultar") %>

<% end %>


<table class="table table-striped">
  <tr>
    <th>Item</th>
    <th>Data do Reparo</th>
    <th>Problema</th>
    <th>Solução</th>
    <th>Valor</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @restitutions.each do |restitution| %>
  <tr>
    <td><%= restitution.item %></td>
    <td><%= restitution.date %></td>
    <td><%= restitution.problem %></td>
    <td><%= restitution.solution %></td>
    <td><%= restitution.bill.value %></td>
    <td><%= link_to 'Visualizar', restitution %></td>
    <td><%= link_to 'Editar', edit_restitution_path(restitution) %></td>
    <td><%= link_to 'Apagar', restitution, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo reparo', new_restitution_path %>