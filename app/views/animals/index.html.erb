<%= form_tag(animals_path, :method => "get") do %>
    <div class="container-fluid">
      <div class="row-fluid" >
        <div class="span3">
          Nome:
        </div>
        <div class="span3 row-form">
          <input type="text" id="name" name="name" />
        </div>
      </div>
      <div class="row-fluid" >
        <div class="span3">
          Raça:
        </div>
        <div class="span3 row-form">
          <input type="text" id="race" name="race" />
        </div>
      </div>
    </div>
    <%= button_tag("Consultar") %>

<% end %>


<table class="table table-striped">
  <tr>
    <th>Nome</th>
    <th>Espécie</th>
    <th>Raça</th>
    <th>Data de Nascimento</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @animals.each do |animal| %>
  <tr>
    <td><%= animal.name %></td>
    <td><%= animal.species %></td>
    <td><%= animal.race %></td>
    <td><%= animal.birth_date %></td>
    <td><%= link_to 'Visualizar', animal %></td>
    <td><%= link_to 'Editar', edit_animal_path(animal) %></td>
    <td><%= link_to 'Apagar', animal, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo animal', new_animal_path %>