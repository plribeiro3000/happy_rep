<%= form_tag(loans_path, :method => "get") do %>
    <div class="container-fluid">
      <div class="row-fluid" >
        <div class="span3">
          Devedor:
        </div>
        <div class="span3 row-form">
          <input type="text" id="dweller" name="dweller" />
        </div>
      </div>
      <div class="row-fluid" >
        <div class="span3">
          Data de realizaçao:
        </div>
        <div class="span3 row-form">
          <input type="text" id="date" name="date" placeholder="Exemplo: 01/01/1992" />
        </div>
      </div>
    </div>
    <%= button_tag("Consultar") %>

<% end %>


<table class="table table-striped">
<tr>
    <th>Data do empréstimo</th>
    <th>Valor</th>
    <th>Devedor</th>
    <th>Data do pagamento</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @loans.each do |loan| %>
  <tr>
    <td><%= loan.realization_date %></td>
    <td><%= loan.value %></td>
    <td><%= loan.dweller %></td>
    <td><%= loan.payment_date %></td>
    <td><%= link_to 'Visualizar', loan %></td>
    <td><%= link_to 'Editar', edit_loan_path(loan) %></td>
    <td><%= link_to 'Apagar', loan, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo empréstimo', new_loan_path %>