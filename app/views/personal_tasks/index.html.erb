<% @personal_tasks.each do |personal_task| %>
  <tr>
    <td><%= personal_task.name %></td>
    <td><%= personal_task.description %></td>
    <td><%= personal_task.start_date %></td>
    <td><%= link_to 'Show', personal_task %></td>
    <td><%= link_to 'Edit', edit_personal_task_path(personal_task) %></td>
    <td><%= link_to 'Destroy', personal_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

