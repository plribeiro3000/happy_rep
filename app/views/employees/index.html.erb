<%= form_tag(employees_path, :method => "get") do %>
    <div class="container-fluid">
      <div class="row-fluid" >
        <div class="span3">
          Nome:
        </div>
        <div class="span3 row-form">
          <input type="text" id="name" name="name" />
        </div>
      </div>
      <div class="row-fluid" >
        <div class="span3">
          Data de Admissão:
        </div>
        <div class="span3 row-form">
          <input type="text" id="date" name="date" />
        </div>
      </div>
    </div>
    <%= button_tag("Consultar") %>

<% end %>


<table class="table table-striped">
  <tr>
    <th>Nome</th>
    <th>Endereço</th>
    <th>Carteira de Trabalho</th>
    <th>CPF</th>
    <th>Data de Admissão</th>
    <th>Salário</th>
    <th>Telefone</th>
    <th>Data de Demissão</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @employees.each do |employee| %>
  <tr>
    <td><%= employee.name %></td>
    <td><%= employee.address %></td>
    <td><%= employee.work_card %></td>
    <td><%= employee.register %></td>
    <td><%= l employee.admission_date %></td>
    <td><%= employee.salary %></td>
    <td><%= employee.phone %></td>
    <td><%= l employee.demission_date if employee.demission_date %></td>
    <td><%= link_to 'Visualizar', employee %></td>
    <td><%= link_to 'Editar', edit_employee_path(employee) %></td>
    <td><%= link_to 'Apagar', employee, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo empregado', new_employee_path %>